let mapleader = " "

set visualbell
set noerrorbells
set number
set relativenumber
set incsearch
set notimeout

set tabstop=4
set shiftwidth=4
set expandtab
set smartindent

set ignorecase
set smartcase

let g:WhichKey_ShowVimActions = "true"

Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-surround'
Plug 'preservim/nerdtree'

set which-key
set easymotion

map <leader>rl <Action>(IdeaVim.ReloadVimRc.reload)
map <leader>ff <Action>(GotoFile)
map <leader>fg <Action>(FindInPath)
map <leader>fb <Action>(RecentFiles)
map <leader>1 <Action>(ToggleBookmark1)
map <leader>2 <Action>(ToggleBookmark2)
map <leader>3 <Action>(ToggleBookmark3)
map <leader>4 <Action>(ToggleBookmark4)
map <leader>5 <Action>(ToggleBookmark5)
map <leader>6 <Action>(ToggleBookmark6)
map <leader>7 <Action>(ToggleBookmark7)
map <leader>8 <Action>(ToggleBookmark8)
map <leader>9 <Action>(ToggleBookmark9)
map <leader>0 <Action>(ToggleBookmark0)
map <C-1> <Action>(GotoBookmark1)
map <C-2> <Action>(GotoBookmark2)
map <C-3> <Action>(GotoBookmark3)
map <C-4> <Action>(GotoBookmark4)
map <C-5> <Action>(GotoBookmark5)
map <C-6> <Action>(GotoBookmark6)
map <C-7> <Action>(GotoBookmark7)
map <C-8> <Action>(GotoBookmark8)
map <C-9> <Action>(GotoBookmark9)
map <C-0> <Action>(GotoBookmark0)
map <C-e> <Action>(ShowBookmarks)

map <leader>i <Action>(ImplementMethods)
map <leader>o <Action>(OverrideMethods)
map <leader>u <Action>(Generate)
map gb <Action>(GotoSuperMethod)
map gi <Action>(GotoImplementation)
map gu <Action>(ShowUsages)
map s <Plug>(easymotion-prefix)

imap jj <Esc>

nnoremap <C-n> :NERDTreeToggle<CR>

nnoremap <C-u> <C-u>zz
nnoremap <C-d> <C-d>zz

nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

nnoremap <leader>bn :bn<CR>
nnoremap <leader>bp :bp<CR>
nnoremap <leader>bd :bd<CR>

nnoremap <C-p> \"+p
nnoremap <leader>y \"+y
vnoremap <leader>y \"+y
nnoremap <leader>p \"_dP
vnoremap <leader>p \"_dP
